{
    "manifest_version": 3,
    "name": "Thesaurus Extension",
    "version": "0.1.0",
    "description": "An easy thesaurus extension",
    "background": {
      "service_worker": "scripts/background.js"
    },
    "action": {
      "default_title": "Thesaurus Extension",
      "default_popup": "pages/popup/popup.html"
    },
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting",
      "storage"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png",
      "512": "icons/icon512.png"
    }
  }